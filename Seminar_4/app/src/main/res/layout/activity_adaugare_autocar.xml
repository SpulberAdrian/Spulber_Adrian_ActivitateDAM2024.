<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Adaugare_Autocar"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:textSize="60sp"
        android:text="Autocar"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/blue">
  </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:text="Nr Locuri"
            android:textSize="35dp"></TextView>

        <EditText
            android:id="@+id/Locuri"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:hint="Introdu numarul de locuri">
        </EditText>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Rezervor"
            android:textSize="35dp">
        </TextView>

        <EditText
            android:id="@+id/litri"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:hint="Introdu litrii din rezervor">

        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Numele Soferului"
            android:textSize="35dp">
        </TextView>

        <EditText
            android:id="@+id/Nume"
            android:layout_width="400dp"
            android:layout_height="76dp"
            android:hint="Introdu numele soferului">

        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Cai Putere"
            android:textSize="35dp">
        </TextView>

        <EditText
            android:id="@+id/Cai"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:hint="Introdu caii putere">

        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textSize="20sp" />
    </LinearLayout>

  </LinearLayout>



